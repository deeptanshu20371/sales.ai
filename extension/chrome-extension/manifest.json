{
    "manifest_version": 3,
    "name": "Sales.ai LinkedIn Message Generator",
    "version": "1.1",
    "description": "Generate personalized messages for LinkedIn profiles",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://openrouter.ai/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"],
            "js": ["config.js", "content_scrape.js", "content.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
        {
            "resources": ["panel.html"],
            "matches": ["https://www.linkedin.com/*"]
        }
    ],
    "action": {
        "default_title": "Sales.ai"
    },
    "icons": {}
}
